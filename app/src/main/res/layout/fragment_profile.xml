<?xml version="1.0" encoding="utf-8"?>
<layout >
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ProfileFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="KC Supermarket"
                android:textColor="@color/black"
                android:textSize="@dimen/size_20sp"
                android:fontFamily="@font/amaranth"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <include
                android:id="@+id/layoutBase"
                layout="@layout/layout_base"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/size_150dp"
                android:layout_height="@dimen/size_150dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/kc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutBase" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_mycourse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:text="My Orders"
                        android:textAllCaps="false"
                        android:padding="@dimen/size_15dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:drawablePadding="@dimen/size_8dp"
                        android:textSize="@dimen/size_16dp" />

                    <TextView
                        android:id="@+id/textView_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:text="Delivery Address"
                        android:textAllCaps="false"
                        android:padding="@dimen/size_15dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_baseline_post_add_24"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:drawablePadding="@dimen/size_8dp"
                        android:textSize="@dimen/size_16dp" />

                    <TextView
                        android:id="@+id/textView_editprofile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:text="Edit Profile"
                        android:textAllCaps="false"
                        android:padding="@dimen/size_15dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_person_24"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:drawablePadding="@dimen/size_8dp"
                        android:textSize="@dimen/size_16dp" />


                    <TextView
                        android:id="@+id/textView_aboutus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:text="About US"
                        android:textAllCaps="false"
                        android:padding="@dimen/size_15dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_baseline_portrait_24"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:drawablePadding="@dimen/size_8dp"
                        android:textSize="@dimen/size_16dp" />


                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:text="Change Password"
                        android:textAllCaps="false"
                        android:padding="@dimen/size_15dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_baselin_lock_24"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:drawablePadding="@dimen/size_8dp"
                        android:textSize="@dimen/size_16dp" />


                    <TextView
                        android:id="@+id/textView_privacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:text="Privacy Policy"
                        android:textAllCaps="false"
                        android:padding="@dimen/size_15dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_baseline_privacy_tip_24"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:drawablePadding="@dimen/size_8dp"
                        android:textSize="@dimen/size_16dp" />
                    <TextView
                        android:id="@+id/textView_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth"
                        android:text="Logout"
                        android:textAllCaps="false"
                        android:padding="@dimen/size_15dp"
                        android:textColor="@color/black"
                        android:drawableLeft="@drawable/ic_baseline_power_settings_new_24"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:drawablePadding="@dimen/size_8dp"
                        android:textSize="@dimen/size_16dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>
